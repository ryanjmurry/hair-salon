@{
  Layout = "_Layout";
}

<div class="container">
@if (Model.Count == 0)
{
  <div class="alert alert-info">
    <strong>Whoops!</strong> No stylists! Add Some!
    </div>
    <a href="/stylists/new" class="btn btn-info">Add Stylist</a>
}
else
{
  <h1>All Stylists</h1>
  <ul class="list-group">
  @foreach (var stylist in Model)
  {
    <li class="list-group-item">@stylist.LastName, @stylist.FirstName <a href="mailto:@stylist.Email" class="btn btn-xs btn-warning">Email</a> <a href="/stylists/@stylist.Id" class="btn btn-xs btn-success float-right">Manage</a></li>
  }
  </ul>
      <a href="/stylists/new" class="btn btn-info">New Stylists</a>
      <a href="/stylists/delete" class="btn btn-danger">Delete All Stylists</a>
}
</div>