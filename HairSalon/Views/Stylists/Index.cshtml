@{
  Layout = "_Layout";
}

<div class="container">
    <div class="jumbotron">
        <h1>Barbers & Stylists</h1>
    </div>
@if (Model.Count == 0)
{
    <div class="no-stylists">
      <h1>...get to hiring</h1>
      <a href="/stylists/new" class="btn btn-success">New Employee</a>
    </div>
}
else
{
        @foreach (var stylist in Model)
        {
          <div class="list-group">
            <a href="/stylists/@stylist.Id" class="list-group-item">@stylist.Name</a>
          </div>
          <li>@stylist.Name <a href="/stylists/@stylist.Id" class="btn btn-sm btn-info">Manage</a></li>
        }

        <a href="/stylists/new" class="btn btn-success">Add New Restaurant</a>
        <a href="/stylists/delete" class="btn btn-success">Delete All Restaurants</a>
}
</div>