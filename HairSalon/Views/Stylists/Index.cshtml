@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
      <h1>Barbers & Stylists</h1>
  </div>
@if (Model.Count == 0)
{
  <div class="no-stylists">
    <h1>...get to hiring</h1>
    <a href="/stylists/new" class="btn btn-success">New Employee</a>
  </div>
}
else
{
  <ul class="list-group">
  @foreach (var stylist in Model)
  {
    <li class="list-group-item">@stylist.LastName, @stylist.FirstName<a href="/stylists/@stylist.Id" class="btn btn-sm btn-info">Manage</a></li>
  }
  </ul>
  <div class="navigation-buttons">
    <a href="/stylists/new" class="btn btn-success">New Employee</a>
    <a href="/stylists/delete" class="btn btn-success">Delete All Employees</a>
  </div>
}
</div>