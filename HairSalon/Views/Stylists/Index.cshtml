@{
  Layout = "_Layout";
}

<div class="container">
  <div class="jumbotron">
      <h1>Barbers & Stylists</h1>
  </div>
@if (Model.Count == 0)
{
  <div class="no-stylists">
    <h1>...get to hiring</h1>
    <a href="/stylists/new" class="btn btn-success">New Employee</a>
  </div>
}
else
{
  <ul class="list-group">
  @foreach (var stylist in Model)
  {
    <li class="list-group-item stylist-list">@stylist.LastName, @stylist.FirstName
    <br>
    <a href="mailto:@stylist.Email" class="btn btn-xs btn-warning">Email</a><a href="/stylists/@stylist.Id" class="btn btn-xs btn-info">Manage</a>
    </li>
  }
  </ul>
    <a href="/stylists/new" class="btn btn-success">New Employee</a>
    <a href="/stylists/delete" class="btn btn-danger">Delete All Employees</a>
}
</div>