@{
  Layout = "_Layout";
}

<div class="container">
    <div class="jumbotron">
        <h1>Barbers & Stylists</h1>
    </div>
@if (Model.Count == 0)
{
    <div class="no-stylists">
      <h1>...get to hiring</h1>
      <a href="/stylists/new" class="btn btn-success">New Employee</a>
    </div>
}
else
{
        <ul>
        @foreach (var restaurant in Model)
        {
            <li>@restaurant.Name <a href="/restaurants/@restaurant.Id" class="btn btn-sm btn-info">Manage</a></li>
        }
        </ul>

        <a href="/restaurants/new" class="btn btn-success">Add New Restaurant</a>
        <a href="/restaurants/delete" class="btn btn-success">Delete All Restaurants</a>
}
</div>