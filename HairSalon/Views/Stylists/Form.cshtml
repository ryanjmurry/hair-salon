@{
  Layout = "_Layout";
}

  <div class='container'>
    <h1>New Employee</h1>
  <form method="post" action="/stylists/{id}">
    <div class="form-group">
      <label for="stylistFirstName">First Name</label>
      <input type="text" name="stylistFirstName" class="form-control" id="stylistFirstName" pattern="^[a-zA-Z][\sa-zA-Z,'-]*[a-zA-Z']$" placeholder="Zeke" required >
    </div>
      
    <div class="form-group">
      <label for="stylistLastName">Last Name</label>
      <input type="text" name="stylistLastName" class="form-control" id="stylistLastName" placeholder="Murry" pattern="^[a-zA-Z][\sa-zA-Z,'-]*[a-zA-Z']$" required >
    </div>

    <div class="form-group">
      <label for="stylistPhoneNumber">Phone Number</label>
      <input type="tel" name="stylistPhoneNumber" class="form-control" id="stylistPhoneNumber" placeholder="805-555-5555" required >
    </div>

    <div class="form-group">
      <label for="stylistEmail">Email</label>
      <input type="email" name="stylistEmail" class="form-control" id="stylistEmail" placeholder="zeke@dog.com" required >
    </div>
      
    <div class="form-group">
      <label for="stylistStreet">Street</label>
      <input type="text" name="stylistStreet" class="form-control" id="stylistStreet" placeholder="1234 Boxer Road" pattern="^\s*\S+(?:\s+\S+){2,}" required >
    </div>

    <div class="form-group">
      <label for="stylistCity">City</label>
      <input type="text" name="stylistCity" class="form-control" id="stylistCity" placeholder="Portland" patter="^[a-zA-Z]+(?:[\s-][a-zA-Z]+)*$" required >
    </div>

    <div class="form-group">
      <label for="stylistState">State</label>
      <input type="text" name="stylistState" class="form-control" id="stylistState" placeholder="OR" patter="^(A[KLRZ]|C[AOT]|D[CE]|FL|GA|HI|I[ADLN]|K[SY]|LA|M[ADEINOST]|N[CDEHJMVY]|O[HKR]|P[AR]|RI|S[CD]|T[NX]|UT|V[AIT]|W[AIVY])$" required >
    </div>

    <div class="form-group">
      <label for="stylistZip">Zip Code</label>
      <input type="text" name="stylistZip" class="form-control" id="stylistZip" placeholder="12345" patter="^[0-9]{5}([- /]?[0-9]{4})?$" required >
    </div>

    <div class="form-group">
      <label for="startDate">Start Date</label>
      <input type="date" name="startDate" class="form-control" id="startDate" required >
    </div>
    <button class="btn btn-primary" type="submit">Add Employee</button>
  </form>
</div>